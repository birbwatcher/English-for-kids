{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["error", "windows"], 
        "import/extensions": [0, { "<js>": "always" }],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]

    }
}
